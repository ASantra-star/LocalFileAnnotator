{
    "manifest_version": 3,
    "name": "Local File Annotator",
    "version": "1.0",
    "description": "View and annotate local text files.",
    "permissions": [
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "host_permissions": [
      "file://*/*"
    ]
  }
  